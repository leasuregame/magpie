{
  "appenders": [{
    "type": "file",
    "filename": "${opts:base}/logs/node-log-${opts:serverId}.log",
    "maxLogSize": 1048576,
    "layout": {
      "type": "basic"
    },
    "backups": 5
  }, {
    "type": "console"
  }, {
    "type": "logLevelFilter",
    "level": "ERROR",
    "appender": {
      "type": "smtp",
      "recipients": "175040128@qq.com",
      "subject": "[Test Game Server Error]",
      "sendInterval": 5,
      "transport": "SMTP",
      "sender": "arthur.wu.34@qq.com",
      "SMTP": {
        "host": "smtp.qq.com",
        "secureConnection": true,
        "port": 465,
        "auth": {
            "user": "arthur.wu.34@qq.com",
            "pass": "wuzhanghai34"
        }
      }
    }
  }, {
    "type": "file",
    "filename": "${opts:base}/logs/con-log-${opts:serverId}.log",
    "pattern": "connector",
    "maxLogSize": 1048576,
    "layout": {
      "type": "basic"
    },
    "backups": 5,
    "category": "con-log"
  }, {
    "type": "file",
    "filename": "${opts:base}/logs/rpc-log-${opts:serverId}.log",
    "maxLogSize": 1048576,
    "layout": {
      "type": "basic"
    },
    "backups": 5,
    "category": "rpc-log"
  }, {
    "type": "file",
    "filename": "${opts:base}/logs/forward-log-${opts:serverId}.log",
    "maxLogSize": 1048576,
    "layout": {
      "type": "basic"
    },
    "backups": 5,
    "category": "forward-log"
  }, {
    "type": "file",
    "filename": "${opts:base}/logs/crash.log",
    "maxLogSize": 1048576,
    "layout": {
      "type": "basic"
    },
    "backups": 5,
    "category": "crash-log"
  }],

  "levels": {
    "rpc-log": "ERROR",
    "forward-log": "ERROR"
  },

  "replaceConsole": true,
  "lineDebug": true
}
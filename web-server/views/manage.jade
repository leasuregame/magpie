extends adminLayout

block content
  

    div(class='panel panel-default')
      div(class='panel-heading')
        strong 更新版本
      div(class='panel-body')
        div(class='col-md-10')

          form(class='form-horizontal', role='form',  action="/manage", method='POST')
            div(class='form-group')
              lable(for='curversion', class='col-sm-2 control-label') 当前版本
              div(class='col-sm-8')
                input(id='curversion', type='text', class='form-control', name='curversion', value='#{version.version}')
            div(class='form-group')
              lable(for='lastversion', class='col-sm-2 control-label') 上一版本
              div(class='col-sm-8')
                input(id='lastversion', type='text', class='form-control', name='lastversion', value='#{version.lastVersion}')

            div(class='form-group')
              div(class='col-sm-offset-2 col-sm-2')
                button(type='submit', class='btn btn-default btn-block btn-lg') 更新

        div(class='col-md-2')
          a(class='btn btn-primary btn-block', href='/update/1.0.0') Download latest.full.zip
          a(class='btn btn-primary btn-block', href='/update/#{version.lastVersion}') Download latest.min.zip
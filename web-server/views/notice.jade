doctype html
html
  head
    title= title
    
    link(rel='stylesheet', href='/css/notice.css')

  body
    div.container
      // a(id='backtop', href='javascript:scroll(0,0)') 返回
      div(class='bg')
        != content

    script.
      var spans = document.getElementsByTagName('span');
      var spanList = Array.prototype.slice.call(spans);
      spanList.forEach(function(s) {
        var width = #{width};
        var size = parseInt(width)/114;
        if (size < 12) {
          size = 12;
        }
        s.style.fontSize = size+'px';
      });

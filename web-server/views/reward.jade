extends adminLayout

block head
    script(type='text/javascript', src='/js/serverAPI.js')
    script(type='text/javascript', src='/js/async.js')
    script(type='text/javascript', src='/js/lib/build/build.js')
    script.
        require('boot');
    style.
        .no-pad-left {padding-left:0px;}
        .no-pad-right {padding-right:0px;}
        .no-margin {margin:0;}
        .no-mar-bottom {margin-bottom:0;}
        .center {text-align: center;}

block content
    h1.text-center 奖励发放
    hr
    div.form-horizontal(role='form', action='#')
        div.form-group
            label.col-sm-3.control-label 服务器
            div.col-sm-7
                select.form-control(type='text', id="area" name='area' required)
        div.form-group
            label.col-sm-3.control-label 玩家等级
            div.col-sm-1.no-pad-right
                input.form-control
            div.col-sm-1.center
                span.glyphicon.glyphicon-minus.control-label
            div.col-sm-1.no-pad-left
                input.form-control
        div.form-group
            label.col-sm-3.control-label VIP
            div.col-sm-1.no-pad-right
                input.form-control
            div.col-sm-1.center
                span.glyphicon.glyphicon-minus.control-label
            div.col-sm-1.no-pad-left
                input.form-control
            label.col-sm-1.control-label 充值额度
            div.col-sm-1.no-pad-right
                input.form-control
            div.col-sm-1.center
                span.glyphicon.glyphicon-minus.control-label
            div.col-sm-1.no-pad-left
                input.form-control
        div.form-group
            label.col-sm-3.control-label 充值时间
            div.col-sm-3
                input.form-control(type='date')
            div.col-sm-1.center
                span.glyphicon.glyphicon-minus.control-label
            div.col-sm-3
                input.form-control(type='date')
        div.form-group
            label.col-sm-3.control-label 玩家
            div.col-sm-7
                input.form-control(type='text', id='playerName' name='playerName')
        hr
        div.form-group
            label.col-sm-3.control-label 有效期限
            div.col-sm-3
                input.form-control(type='date', id='expDate' name='expDate')
        div.form-group
            label.col-sm-3.control-label 发送人
            div.col-sm-7
                input.form-control(type='text', id='author' name='author')
        div.form-group
            label.col-sm-3.control-label 标题
            div.col-sm-7
                input.form-control(type='text', id='title' name='title')
        div.form-group
            label.col-sm-3.control-label 内容
            div.col-sm-7
                textarea.form-control(rows='3' id='content' name='content' maxlength='500')
        hr
        div(id='rewardBox')
            div.form-group.no-margin
                div.col-sm-2.control-label(style='padding: 16px 20px;')
                    button.btn.btn-primary(id='btnResetReward') 清空奖励
                div.alert.no-margin
                    span(style='font-size:24px;margin-right:8px;padding-top:4px;font-weight:bolder') 奖励选项
                    span.alert.alert-danger.hide(id='baseRewardAlert' style='padding:8px 15px;position:relative;top:-3px;')
            div.form-group
                div.rewardTag
                    label.col-sm-2.control-label.limitTag(limit='1000')
                    label.col-sm-1.control-label.name 魔石
                    div.col-sm-2
                        input.form-control.baseReward(id='gold' name='gold')
                div.rewardTag
                    label.col-sm-2.control-label.limitTag(limit='1000000')
                    label.col-sm-1.control-label.name 仙币
                    div.col-sm-2
                        input.form-control.baseReward(id='money' name='money')
            div.form-group
                div.rewardTag
                    label.col-sm-2.control-label.limitTag(limit='200')
                    label.col-sm-1.control-label.name 体力点
                    div.col-sm-2
                        input.form-control.baseReward(id='powerValue' name='powerValue')
                div.rewardTag
                    label.col-sm-2.control-label.limitTag(limit='1000')
                    label.col-sm-1.control-label.name 灵气
                    div.col-sm-2
                        input.form-control.baseReward(id='spirit' name='spirit')
            div.form-group
                div.rewardTag
                    label.col-sm-2.control-label.limitTag(limit='100000')
                    label.col-sm-1.control-label.name 技能点
                    div.col-sm-2
                        input.form-control.baseReward(id='skillPoint' name='skillPoint')
                div.rewardTag
                    label.col-sm-2.control-label.limitTag(limit='20000')
                    label.col-sm-1.control-label.name 仙丹
                    div.col-sm-2
                        input.form-control.baseReward(id='elixir' name='elixir')
            div.form-group
                div.rewardTag
                    label.col-sm-2.control-label.limitTag(limit='10000')
                    label.col-sm-1.control-label.name 活力点
                    div.col-sm-2
                        input.form-control.baseReward(id='energy' name='energy')
                div.rewardTag
                    label.col-sm-2.control-label.limitTag(limit='30')
                    label.col-sm-1.control-label.name 卡魂
                    div.col-sm-2
                        input.form-control.baseReward(id='fragments' name='fragments')
            div.form-group
                div.rewardTag
                    label.col-sm-2.control-label.limitTag(limit='10')
                    label.col-sm-1.control-label.name 精元
                    div.col-sm-2
                        input.form-control.baseReward(id='superHonor' name='superHonor')
                div.rewardTag
                    label.col-sm-2.control-label.limitTag(limit='100000')
                    label.col-sm-1.control-label.name 荣誉点
                    div.col-sm-2
                        input.form-control.baseReward(id='honor' name='honor')
            div.form-group
                div.rewardTag
                    label.col-sm-2.control-label.limitTag(limit='50')
                    label.col-sm-1.control-label.name 喇叭
                    div.col-sm-2
                        input.form-control.baseReward(id='speaker' name='speaker')
            hr
            div(id='cardGroup')
                div.form-group
                    label.col-sm-3.control-label
                        button.btn.btn-primary(id='btnAddCard')
                            span.glyphicon.glyphicon-plus
                    label.col-sm-3.control-label(style='text-align:center') 卡牌
                    label.col-sm-2.control-label(style='text-align:center') 等级
                    label.col-sm-2.control-label(style='text-align:center') 数量
                div.form-group.cardTag
                    label.col-sm-3.control-label
                        a.btn.btn-danger.btnRemoveCard(href='javascript:void(0);')
                            span.glyphicon.glyphicon-minus
                    label.col-sm-3.control-label
                        select.form-control.cardReward.cName(name='tableId')
                            option(value='30000') 经验元灵
                    label.col-sm-2.control-label
                        hidden.cardLimit(limit='30')
                        input.form-control.cardReward.cLv(name='lv')
                    label.col-sm-2.control-label
                        hidden.cardLimit(limit='50')
                        input.form-control.cardReward.cQty(name='qty')
            div.form-group(style='text-align:center')
                    span.alert.alert-danger.hide(id='cardRewardAlert' style='padding:8px 15px;font-weight:normal')

        hr
        div.form-group.text-right
            div.col-sm-7.col-sm-offset-3
                button.btn.btn-success.btn-lg(id='btnOk', data-loading-text="Loading...") &nbsp;&nbsp;&nbsp;确定&nbsp;&nbsp;&nbsp;
        div.form-group(id='msg-block')
            div.col-sm-7.col-sm-offset-3
                div.alert.alert-dismissable.hide(id='resAlert')
                    button.close(type='button', data-dismiss='alert', aria-hidden='true') &times;
                    span

    div.modal.fade(id='actionConfirm', tabindex='-1' role='dialog', aria-labelledby='actionConfirmModalLable', aria-hidden='true')
        div.modal-dialog
            div.modal-content
                div.modal-header
                    button.close(type='button', data-dismiss='modal' aria-hidden='true') &times;
                    h4.modal-title(id='actionConfirmModalLable') 确定要提交此信息吗？
                div.modal-body.form-horizontal(id='modalContent')
                    div.form-group.no-mar-bottom.area
                        label.col-sm-2.control-label 服务器:
                        div.col-sm-8.form-control-static.text
                    div.form-group.no-mar-bottom.receiver
                        label.col-sm-2.control-label 玩家:
                        div.col-sm-8.form-control-static.text
                    div.form-group.no-mar-bottom.expDate
                        label.col-sm-2.control-label 有效期限:
                        div.col-sm-8.form-control-static.text
                    div.form-group.no-mar-bottom.author
                        label.col-sm-2.control-label 发送人:
                        div.col-sm-8.form-control-static.text
                    div.form-group.no-mar-bottom.title
                        label.col-sm-2.control-label 标题:
                        div.col-sm-8.form-control-static.text
                    div.form-group.no-mar-bottom.content
                        label.col-sm-2.control-label 内容:
                        div.col-sm-8.form-control-static.text
                    div.form-group.no-mar-bottom.reward
                        label.col-sm-2.control-label 奖励:
                        div.col-sm-8.form-control-static.text
                div.modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') 取消
                    button.btn.btn-primary(type='button', id='btnSendMsg') 确定
    script(type='text/javascript', src='/js/webServerHandle.js')
    script(type='text/javascript', src='/js/reward.js')
    script(id='cardOptTemp' type='text/javascript')
        div.form-group.cardTag
            label.col-sm-3.control-label
                a.btn.btn-danger.btnRemoveCard(href='javascript:void(0);')
                    span.glyphicon.glyphicon-minus
            label.col-sm-3.control-label
                select.form-control.cardReward.cName(name='tableId')
                    option replace
            label.col-sm-2.control-label
                hidden.cardLimit(limit='30')
                input.form-control.cardReward.cLv(name='lv')
            label.col-sm-2.control-label
                hidden.cardLimit(limit='50')
                input.form-control.cardReward.cQty(name='qty')